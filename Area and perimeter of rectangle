#include<iostream>
using namespace std;
int main()
{
    int l,b;
    float area,perimeter;
    cout<<"Enter the length of rectandle: "<<endl;
    cin>>l;
    cout<<"enter the breath of rectangle: "<<endl;
    cin>>b;
    area=l*b;
    perimeter=2*(l+b);
    cout<<"area of rectangle is: "<<area<<endl;
    cout<<"perimeter of rectangle is: "<<perimeter<<endl;
    return 0;
}
